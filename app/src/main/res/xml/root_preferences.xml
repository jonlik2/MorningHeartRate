<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/time">

        <ListPreference
            app:entries="@array/time_entries"
            app:entryValues="@array/time_values"
            app:key="times"
            app:title="@string/set_time"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="@string/default_time"/>

    </PreferenceCategory>

</PreferenceScreen>
